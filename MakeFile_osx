CC=g++
CFLAGS=-c -Wall 
LDFLAGS= -framework OpenGL -framework GLUT
SOURCES=project2.cpp Camera.cpp Robot.cpp BodyPart.cpp stb_image.c Util.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=project3

all: $(SOURCES) $(EXECUTABLE)
	
$(EXECUTABLE): $(OBJECTS) 
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@
	
clean:
	rm *.o $(EXECUTABLE)