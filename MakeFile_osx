CC=g++
CFLAGS=-c -Wall 
LDFLAGS= -framework OpenGL -framework GLUT
SOURCES=homework4.cpp Camera.cpp BodyPart.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=project1

all: $(SOURCES) $(EXECUTABLE)
	
$(EXECUTABLE): $(OBJECTS) 
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@
	
clean:
	rm *.o $(EXECUTABLE)